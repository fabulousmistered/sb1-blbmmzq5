---
import Layout from '../layouts/Layout.astro';
import TranslationList from '../components/history/TranslationList';

const title = "Translation History - Daily Latin";
---

<Layout title={title}>
  <main>
    <h1>Translation History</h1>
    <p class="subtitle">Review and edit your past translations</p>
    
    <TranslationList client:load />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem;
    max-width: 800px;
    color: #333;
    background: #f9f9f9;
    min-height: 100vh;
  }

  h1 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 2rem;
  }
</style>