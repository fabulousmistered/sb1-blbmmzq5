---
interface Props {
  english: string;
}

const { english } = Astro.props;
---

<div class="reference-container">
  <button class="toggle-btn" id="toggleRef">Show Reference Translation</button>
  <div class="reference hidden" id="refContent">
    <h4>Reference Translation</h4>
    <p>{english}</p>
  </div>
</div>

<style>
  .reference-container {
    margin-top: 1rem;
  }

  .toggle-btn {
    background: #4a5568;
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9rem;
  }

  .toggle-btn:hover {
    background: #2d3748;
  }

  .reference {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    margin-top: 1rem;
  }

  .hidden {
    display: none;
  }
</style>

<script>
  const toggleBtn = document.getElementById('toggleRef');
  const refContent = document.getElementById('refContent');

  toggleBtn?.addEventListener('click', () => {
    refContent?.classList.toggle('hidden');
    if (toggleBtn) {
      toggleBtn.textContent = refContent?.classList.contains('hidden') 
        ? 'Show Reference Translation' 
        : 'Hide Reference Translation';
    }
  });
</script>